{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "disableSourceOfProjectReferenceRedirect": false,
    "emitDeclarationOnly": true,
    "checkJs": false,
    "alwaysStrict": true,
    "strict": true,
    "pretty": true,
    "exactOptionalPropertyTypes": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    // Support generation of source maps. Note: you must *also* enable source
    // maps in your `ember-cli-babel` config and/or `babel.config.js`.
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "declarations",
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "@warp-drive/core": ["../../warp-drive-packages/core/declarations"],
      "@warp-drive/core/*": ["../../warp-drive-packages/core/declarations/*"],
      "@warp-drive/legacy": ["../../warp-drive-packages/legacy/declarations"],
      "@warp-drive/legacy/*": ["../../warp-drive-packages/legacy/declarations/*"],
      "@warp-drive/utilities": ["../../warp-drive-packages/utilities/declarations"],
      "@warp-drive/utilities/*": ["../../warp-drive-packages/utilities/declarations/*"]
    },
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "moduleDetection": "force"
  },
  "references": [
    {
      "path": "../../warp-drive-packages/core"
    },
    {
      "path": "../../warp-drive-packages/legacy"
    },
    {
      "path": "../../warp-drive-packages/utilities"
    }
  ]
}

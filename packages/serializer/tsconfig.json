{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "esnext",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "@ember-data/serializer": ["addon"],
      "@ember-data/serializer/*": ["addon/*"],
      "@ember-data/store": ["../store/addon"],
      "@ember-data/store/*": ["../store/addon/*"],
      "@ember-data/canary-features": ["../canary-features/addon"],
      "@ember-data/adapter": ["../adapter/addon"],
      "@ember-data/adapter/*": ["../adapter/addon/*"],
      "@ember-data/serializer/test-support": ["addon-test-support"],
      "@ember-data/serializer/test-support/*": ["addon-test-support/*"],
      "*": ["types/*"]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*",
    "../store/addon/minimum-serializer-interface.ts"
  ],
  "exclude": ["node_modules"]
}

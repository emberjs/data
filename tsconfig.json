{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",

    // Environment Configuration
    "experimentalDecorators": true,
    "moduleResolution": "node",

    // Enhance Strictness
    "strict": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "newLine": "LF",
    "noEmit": true,
    "allowJs": false
  },

  "paths": {
    "ember-data/*": [
      "lib/*",
      "addon/*"
    ],
    "@ember": ["node_modules/@types/ember/index.d.ts"]
  },

  "include": [
    "addon/**/*.ts",
    "addon/*.ts",
    "./lib/**/*.ts",
    "lib/*.ts"    
  ],

  "exclude": [
    "dist",
    "tmp",
    "node_modules"
  ]
}

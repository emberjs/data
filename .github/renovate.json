{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": [":dependabot:", ":label: dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "@types",
        "eslint-config-prettier",
        "eslint",
        "glint",
        "lint",
        "prettier",
        "stylelint",
        "typescript"
      ],
      "groupName": "code-quality"
    },
    {
      "matchPackageNames": [
        "webpack",
        "npm-run-all",
        "ember-cli",
        "ember-cli-dotenv",
        "ember-auto-import",
        "broccoli-asset-rev",
        "broccoli-debug",
        "broccoli-funnel",
        "broccoli-merge-trees",
        "ember-cli-build-notifications",
        "ember-cli-content-security-policy",
        "ember-cli-dependency-checker",
        "ember-cli-inject-live-reload",
        "emner-cli-inline-content",
        "ember-cli-sri",
        "ember-css-modules"
      ],
      "matchPackagePatterns": ["@embroider", "postcss"],
      "groupName": "build-tools"
    },
    {
      "matchPackageNames": [
        "ember-source",
        "ember-resolver",
        "loader.js",
        "ember-classic-decorator",
        "ember-cached-decorator",
        "ember-modifier",
        "ember-page-title",
        "tracked-built-ins"
      ],
      "matchPackagePatterns": ["glimmer", "polyfill"],
      "groupName": "ember-core"
    },
    {
      "matchPackageNames": ["ember-cli-babel", "ember-cli-htmlbars", "@embroider/macros", "ember-cli-terser"],
      "matchPackagePatterns": ["babel", "postcss"],
      "groupName": "asset-compilation"
    },
    {
      "matchPackageNames": [
        "chai",
        "mocha",
        "qunit-dom",
        "sinon",
        "ember-exam",
        "testem",
        "ember-cli-mirage",
        "ember-qunit",
        "qunit",
        "ember-cli-deprecation-workflow",
        "ember-a11y-testing",
        "@ember/test-helpers",
        "@ember/test-waiters"
      ],
      "matchPackagePatterns": ["percy", "quality", "test"],
      "groupName": "testing"
    },
    {
      "matchPackageNames": ["ember-inflector", "ember-promise-helpers"],
      "groupName": "data-utils"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    }
  ],
  "npm": {
    "stabilityDays": 3
  },
  "rangeStrategy": "bump",
  "prHourlyLimit": 10,
  "vulnerabilityAlerts": {
    "labels": [":label: security"],
    "automerge": false,
    "assignees": ["@runspired"],
    "enabled": true
  },
  "ignorePaths": ["node_modules/**", "**/node_modules/**"]
}
